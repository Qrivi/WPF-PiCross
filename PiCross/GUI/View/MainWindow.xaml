<Window x:Class="GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        xmlns:extensions="clr-namespace:GUI.Extensions"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen" 
        Width="1200" Height="800"
        MinWidth="1024" MinHeight="700"
        Title="PiCross" x:Name="PiCrossGUI"
        Background="{StaticResource BackgroundApplication}">
    <DockPanel>
        <StackPanel DockPanel.Dock="Right" 
                    Orientation="Vertical" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Stretch"
                    Width="280"
                    Background="{StaticResource BackgroundSidebar}">
            <TextBlock Style="{StaticResource AppTitle}"/>
            <TextBlock Style="{StaticResource SubTitle}">Selected Puzzle:</TextBlock>
            <local:GameControl DataContext="{Binding CurrentGame.Value}"/>
            <TextBlock  Style="{StaticResource SubTitle}">Current Game:</TextBlock>
            <local:DetailsControl/>
            <Button Width="100" Margin="30" Command="{Binding NewGame}">New Game</Button>
        </StackPanel>
        <Grid DockPanel.Dock="Left">
            <ScrollViewer Visibility="{Binding Path=ShowGames.Value, Converter={StaticResource BoolToVis}}"
                          HorizontalScrollBarVisibility="Disabled"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalAlignment="Center">
                <ItemsControl Margin="15 30"
                              ItemsSource="{Binding Games}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <local:GameControl Margin="8"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
            <ScrollViewer Visibility="{Binding Path=ShowBoard.Value, Converter={StaticResource BoolToVis}}"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">
                <local:Board DataContext="{Binding Board.Value}"/>
            </ScrollViewer>
        </Grid>
    </DockPanel>
</Window>